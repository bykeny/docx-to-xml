<Window x:Class="DocxToXmlWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DOCX to XML Converter" Height="450" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Prefix to Tag Mappings:" FontWeight="Bold" />
            <DataGrid x:Name="MappingGrid" AutoGenerateColumns="False"
                      CanUserAddRows="True" CanUserDeleteRows="True"
                      Width="560" Height="150" Margin="0,5,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="*" />
                    <DataGridTextColumn Header="Prefix" Binding="{Binding Prefix}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Height="100"
                    AllowDrop="True" Background="#FFEFEFEF" Margin="0,0,0,10">
                <TextBlock Text="Drag and drop a .docx file here" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="Gray" FontStyle="Italic"/>
            </Border>

            <Button Content="Convert to XML" Height="35" Width="150"
                    HorizontalAlignment="Left" Click="ConvertButton_Click" />
        </StackPanel>
    </Grid>
</Window>
