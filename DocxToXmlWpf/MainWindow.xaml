<Window x:Class="DocxToXmlWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DOCX to XML Converter" Height="250" Width="500"
        AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop">
    <Grid Background="#FAFAFA">
        <Border BorderBrush="#CCCCCC" BorderThickness="2" CornerRadius="10" Margin="20" Background="White">
            <TextBlock Text="Drag and drop a .docx file here"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="18" Foreground="#333333" TextWrapping="Wrap" TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>
